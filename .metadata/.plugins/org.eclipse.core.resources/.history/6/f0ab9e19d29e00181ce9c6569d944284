package com.internousdev.ecsite2.action;

import java.sql.SQLException;
import java.util.ArrayList;
import java.util.Map;

import org.apache.struts2.interceptor.SessionAware;

import com.opensymphony.xwork2.ActionSupport;

public class AdminMyPageAction extends ActionSupport implements SessionAware{
	public Map<String, Object> session;
	private AdminMyPageDAO adminMyPageDAO = new AdminMyPageDAO();
	private ArrayList<AdminMyPageDTO> adminMyPageList = new ArrayList<AdminMyPageDTO>();
	private String deleteFlg;
	private String message;

	public String execute() throws SQLException{

		if(deleteFlg == null){
			String item_transaction_id = session.get("itemName").toString();
			String user_master_id = session.get("login_id").toString();
			adminMyPageList = adminMyPageDAO.getAdminMyPageUserInfo(item_transaction_id, user_master_id);
		} else if(deleteFlg.equals("1")){
					delete();
		}
		String result = SUCCESS;
		return result;
	}
		public void delete() throws SQLException{
			String item_transaction_id = session.get("id").toString();
			String user_master_id = session.get("login_id").toString();

			int res = myPageDAO.buyItemHistoryDelete(item_transaction_id, user_master_id);

			if(res > 0){
				adminMyPageList = null;
				setMessage("商品情報を正しく削除しました。");
			} else if(res == 0){
				setMessage("商品情報の削除に失敗しました。");
			}
		}
		public void setDeleteFlg(String deleteFlg) {
			this.deleteFlg = deleteFlg;

			}
			@Override
			public void setSession(Map<String, Object> session) {
				this.session = session;
			}
			public ArrayList<AdminMyPageDTO> getAdminMyPageList() {
				return this.AdminmyPageList;
			}
			public String getMessage() {
				return this.message;
			}
			public void setMessage(String message) {
				this.message = message;
			}
}